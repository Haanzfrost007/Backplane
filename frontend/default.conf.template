server {
    listen 80;
    server_name localhost;

    location / {
        root /usr/share/nginx/html;
        index index.html index.htm;
        try_files $uri $uri/ /index.html;
    }

    location /api/ {
        # Reescribir la URL para quitar /api/
        rewrite ^/api/(.*) /$1 break;
        
        # Proxy directo sin variables para evitar problemas de resolución en runtime
        proxy_pass __API_BASE_URL__;
        
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        
        # No forzamos el Host header manualmente, Nginx lo deduce de la URL del proxy_pass
        # Esto es crucial para que funcione tanto con dominios públicos (SNI) como locales
        
        proxy_cache_bypass $http_upgrade;
        proxy_ssl_server_name on;
    }
}
